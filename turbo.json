{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["docs/refactoring_proposals.md"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "apps/frontend/.next/**",
        "apps/frontend/.turbo/**",
        "apps/frontend/public/build-manifest.json",
        "apps/backend/__pycache__/**",
        "apps/backend/**/*.pyc"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "fmt": {
      "dependsOn": ["^fmt"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
