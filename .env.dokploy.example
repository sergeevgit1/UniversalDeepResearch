# Production Environment Configuration for Dokploy Deployment
# Copy this file to .env and customize the values for your deployment

# Port Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000

# Backend Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info
RELOAD=false

# Frontend Configuration
# Replace with your actual domain in production
FRONTEND_URL=https://your-domain.com,https://www.your-domain.com
BACKEND_URL=https://api.your-domain.com

# CORS Configuration
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization
CORS_MAX_AGE=600
ALLOW_CREDENTIALS=true

# API Configuration - REQUIRED FOR FUNCTIONALITY
# Get these keys from the respective services
NVDEV_API_KEY=your_nvdev_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# LLM Configuration
# Available models:
# - NVIDIA: llama-3.1-nemotron-253b, llama-3.1-nemotron-8b, llama-3.1-8b
# - OpenRouter: openrouter/anthropic/claude-3.5-sonnet, openrouter/openai/gpt-4,
#               openrouter/meta-llama/llama-3.1-70b-instruct, openrouter/google/gemini-2.0-flash-exp,
#               openrouter/mistralai/mistral-large, openrouter/openai/gpt-oss-120b-free
DEFAULT_MODEL=openrouter/openai/gpt-oss-120b-free
LLM_BASE_URL=https://openrouter.ai/api/v1
LLM_TEMPERATURE=0.2
LLM_TOP_P=0.7
LLM_MAX_TOKENS=2048

# Research Configuration
MAX_TOPICS=1
MAX_SEARCH_PHRASES=1
MAX_SEARCH_RESULTS=10
MOCK_DIRECTORY=mock_instances/stocks_24th_3_sections
RANDOM_SEED=42

# Logging Configuration
LOG_DIR=logs
TRACE_ENABLED=true
COPY_INTO_STDOUT=false

# FrameV4 Configuration
LONG_CONTEXT_CUTOFF=8192
FORCE_LONG_CONTEXT=false
MAX_ITERATIONS=1024
INTERACTION_LEVEL=none

# Frontend Environment Variables
NEXT_PUBLIC_API_VERSION=v2
NEXT_PUBLIC_DRY_RUN=false
NEXT_PUBLIC_ENABLE_V2_API=true
NEXT_PUBLIC_FRONTEND_HOST=0.0.0.0

# Dokploy Specific Configuration
# These will be automatically set by Dokploy in most cases
# DOKPLOY_APP_ID=
# DOKPLOY_PROJECT_ID=
# DOKPLOY_SERVER_ID=