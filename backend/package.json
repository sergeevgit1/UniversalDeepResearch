{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "HOST=0.0.0.0 PORT=8000 uvicorn main:app --reload",
    "build": "python -m compileall .",
    "lint": "ruff check --config ../ruff.toml .",
    "fmt": "ruff format --config ../ruff.toml .",
    "start": "HOST=${HOST:-0.0.0.0} PORT=${PORT:-8000} uvicorn main:app --host ${HOST:-0.0.0.0} --port ${PORT:-8000}"
  }
}
